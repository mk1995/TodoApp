<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    tools:context=".view.fragments.AllTasksFragment">
    <!-- A priority circle that is colored in programmatically in the adapter code -->
    <TextView
        android:id="@+id/taskRVPriority"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:background="@drawable/priority_circle"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        tools:text="1" />
    <LinearLayout
        android:layout_width="0dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="end
"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- TextView that displays the description -->
        <TextView
            android:id="@+id/taskRVTitle"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:hint="@string/title_rv"/>


        <!-- TextView that displays the update date -->
        <TextView
            android:id="@+id/taskRVDate"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:hint="@string/date_RV" />

    </LinearLayout>

</LinearLayout>